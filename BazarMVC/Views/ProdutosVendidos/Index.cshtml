@model List<BazarMVC.Repositories.Model.ProdutosVendidosModel>

@{
    ViewBag.Title = "Produtos Vendidos";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Produtos Vendidos</h1>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-6">
                <table class="table" data-sortable id="data-table">
                    <thead>
                        <tr>
                            <th scope="col">Comprador</th>
                            <th scope="col">Preço Pago</th>
                            <th scope="col">Produto</th>
                            <th scope="col">Quantidade</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Comprador</td>
                                <td>R$ @item.PrecoPago</td>
                                <td>@item.Produto</td>
                                <td>@item.Quantidade</td>
                                <td>
                                    @if (!item.Status)
                                    {
                                        <span>Não Pago</span>
                                    }
                                    else
                                    {
                                        <span>Pago</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#data-table').dataTable({
            "language": {
                "paginate": {
                    "previous": "Anterior",
                    "next": "Próximo"
                },
                "lengthMenu": "Mostrando _MENU_ itens por página",
                "zeroRecords": "Nada Encontrado",
                "info": "Página _PAGE_ de _PAGES_",
                "infoEmpty": "Sem itens para visualizar",
                "infoFiltered": "(Filtrado de _MAX_ itens)",
                "search": "Pesquisar"
            }
        });
    });
</script>

