@using BazarMVC.Models
@model BazarMVC.Models.RegisterViewModel

@{
    ViewBag.Title = "Cadastro de Usuário";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cadastro de Usuário</h1>
            </div>
        </div>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    @using (Html.BeginForm("Create", "Usuarios", FormMethod.Post, new { role = "form" }))
                    {
                        for (int i = 0; i < Model.TiposUsuario.Count; i++)
                        {
                            @Html.HiddenFor(m => Model.TiposUsuario[i].Id)
                            @Html.HiddenFor(m => Model.TiposUsuario[i].Name)
                        }

                        <div class="card-body">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="">Apelido (Login do sistema)</label>
                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Apelido" })
                                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="">Tipo do Usuário</label>
                                        <select class="form-control" id="" name="Perfil">
                                            <option value="">Tipo do Usuário</option>
                                            @foreach (var item in Model.TiposUsuario)
                                            {
                                                <option>@item.Name</option>
                                            }
                                        </select>
                                        @Html.ValidationMessageFor(m => m.Perfil, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="">Email</label>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-mail" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="">Nome</label>
                                        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", placeholder = "Nome" })
                                        @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="">Sobrenome</label>
                                        @Html.TextBoxFor(m => m.Sobrenome, new { @class = "form-control", placeholder = "Sobrenome" })
                                        @Html.ValidationMessageFor(m => m.Sobrenome, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="">Senha</label>
                                        @Html.PasswordFor(m => m.Senha, new { @class = "form-control", placeholder = "Senha" })
                                        @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="">Confirmar Senha</label>
                                        @Html.PasswordFor(m => m.ConfirmarSenha, new { @class = "form-control", placeholder = "Confirmar Senha" })
                                        @Html.ValidationMessageFor(m => m.ConfirmarSenha, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-4 offset-xl-4 col-sm-6 offset-sm-3">
                                    <button type="submit" class="btn btn-primary btn-block">Registar</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .margin-auto {
        margin: 0 auto;
    }
</style>
